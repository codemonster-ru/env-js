{
    "name": "@codemonster-ru/env",
    "version": "1.1.0",
    "description": "Environment variables loader from .env file for Node.js",
    "license": "MIT",
    "author": {
        "name": "Kirill Kolesnikov",
        "email": "admin@codemonster.ru",
        "url": "https://github.com/KolesnikovKirill"
    },
    "type": "module",
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/esm/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js",
            "types": "./dist/esm/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "build:esm": "tsc -p tsconfig.json",
        "build:cjs": "tsc -p tsconfig.cjs.json",
        "build": "npm run clean && npm run build:esm && npm run build:cjs",
        "test": "jest",
        "prepare": "npm run build"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "jest": "^30.1.3",
        "ts-jest": "^29.4.1",
        "ts-node": "10.9.2",
        "typescript": "^5.6.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/codemonster-ru/env-js.git"
    },
    "keywords": [
        "env",
        "nodejs",
        "dotenv",
        "typescript",
        "environment"
    ]
}
